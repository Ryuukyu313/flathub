{
    "app-id": "org.pipewire.Helvum",
    "runtime": "org.gnome.Platform",
    "runtime-version": "41",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable",
        "org.freedesktop.Sdk.Extension.llvm12"
    ],
    "command": "helvum",
    "finish-args": [
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--share=ipc",
        "--filesystem=xdg-run/pipewire-0"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin:/usr/lib/sdk/llvm12/bin",
        "prepend-ld-library-path": "/usr/lib/sdk/llvm12/lib"
    },
    "modules": [
        {
            "name": "Helvum",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.freedesktop.org/pipewire/helvum/uploads/4c3dd5e0e64a39d7bea2c4a49778b653/helvum-0.3.3.tar.xz",
                    "sha256": "bf6668ef0d893d461903cac94ee4fd004057a4a6150f7a90cbbab152fcc155cb"
                }
            ]
        }
    ]
}
